<table cellpadding="0" cellspacing="0" width="97%" class="imagetable" id="myTable">
  <thead>
    <tr>
      <th style="width:200px;text-align:center; border: 1px solid #999">Name</th>
      <th style="width:200px;text-align:center; border: 1px solid #999">Descriptions</th>
      <th style="width:100px;text-align:center; border: 1px solid #999">Price</th>
      <th style="width:100px;text-align:center; border: 1px solid #999">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @products.count <= 0 %>
      <tr>
        <td colspan="6">There are currently no products</td>
      </tr>
    <% else %>
      <% @products.each do |product| %>
        <tr style="border: 1px solid #999">

          <td style="text-align:center; border: 1px solid #999"> <%= product.name %></td>
          <td style="text-align:center; border: 1px solid #999"> <%= product.description %> </td>
          <td style="text-align:center; border: 1px solid #999"> $<%= product.price %> </td>
          <td style="text-align:center; border: 1px solid #999">
            <%= link_to image_tag("icons/pencil.png"), edit_product_path(:id => product.id) %>&nbsp;&nbsp;&nbsp; <%= link_to image_tag("icons/cross.png"), product_path(:id => product.id), :confirm => 'Are you sure?', :method => 'DELETE' %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
