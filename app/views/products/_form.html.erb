<div style="padding-left: 5px;">
  <%= form_for @product do |f| %>
    <!--<div style="color: red;"><%#= f.error_messages :header_message => " ", :message => " ", :header_tag => :h3 %></div>-->
    Product Name :<br/>
    <%= f.text_field :name%><br/>

    Product Description :<br/>
    <%= f.text_area :description, :size => "28x2"%><br/>

    Product Price :<br/>
    <%= f.text_field :price , :size => 6 %><br/>

    <%= f.submit "Submit" %>
    <br/><br/><br/><br/>
  <% end %>
</div>
