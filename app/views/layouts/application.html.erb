<!DOCTYPE html>
<html>
  <head>
    <title>Bill</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="inner_body">
      <div>&nbsp;</div>
      <div class="main_wrap">
        <div class="FR sign">
          <ul></ul>
        </div>
        <div class="FL" style="padding:5px 5px 0 0;">
          <div class="FL head_text">BILL CREATION</div>
          <div class="clear"></div>
        </div>
        <div class="FR" style="padding:5px 5px 0 0;">
          <div class="FL text">Search</div>
          <div class="FL"><input name="" type="text"  class="text_aria"/></div>
          <div class="clear"></div>
        </div>        
        <div class="clear"></div>
        <div style="height:10px"></div>
      </div>
      <div class="nav_bg">
        <div class="main_wrap">
          <div class="nab">
            <ul>
              <li style="background:none;"><%= link_to 'Home', root_url %></li>
              <li><%= link_to 'Create Invoice', new_invoice_path%></li>
              <li><%= link_to 'Create Product', new_product_path %></li>
              <li><%= link_to 'Product List', products_path %></li>
            </ul>
          </div>
        </div>
      </div>
      <% if flash[:alert] or flash[:notice] %>
        <div id="notice" <% if flash[:alert] or flash[:notice] %> class="warning"<% end %>>
          <%= flash[:alert] || flash[:notice] %>
        </div>
        <script type="text/javascript">setTimeout("$('#notice').hide();", 5000)</script>
      <% end %>
      <div class="main_wrap">
        <div style="height:8px;"></div>
        <div></div>
        <div class="body_bg" style="height:500%;overflow: hidden;padding-left: 20px;">
          <div style=" height: 20px;padding-right: 1px;"></div>
          <%= yield %>
          <div style=" height: 400px"></div>
        </div>
      </div>
    </div>
    <div class="footer">
      <div class="main_wrap">
        <div class="footer_nab">
          <ul>
            <li><a href="#">About Us</a></li>
            <li><a href="#">Carrier</a></li>
            <li><a href="#">Contact Us</a></li>
            <li><a href="#">Blog</a></li>
            <li><a href="#">Links</a></li>
            <li>&nbsp;</li>
          </ul>
        </div>
        <div class="clear"></div>
        <p>&nbsp;</p>
      </div>
    </div>
  </body>
</html>
