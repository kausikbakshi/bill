<div><br></br></div>
<div>
  <%= form_for(@invoice, :url => admin_invoice_path(:id => @invoice.id) ,:method => 'PUT') do |f| %>
    <div style="float: left; padding-left: 10px;"><b>Date: </b><%= @invoice.created_at.strftime("%m/%d/%Y")%></div>
    <div style="float: left; padding-left: 50px;"><b>Due Date: </b><%= f.text_field :due_date, :id => "datepicker2"%></div>
    <div style="float: left; padding-left: 50px;"><b>Invoice #</b> INV-<%= @invoice.id %></div>
    <div style="padding: 10px 0 20px 0;"><br></br></div>
    <table>
      <th style="border: 1px solid #999"> Item </th>
      <th style="border: 1px solid #999"> Description </th>
      <th style="border: 1px solid #999"> Qty </th>
      <th style="border: 1px solid #999"> Unit Price </th>
      <th style="border: 1px solid #999"> Amount </th>
      <th style="border: 1px solid #999"> Tax Rate </th>
      <th style="border: 1px solid #999"> Amount USD </th>
      <th style="border: 1px solid #999"> </th>
      <%= f.fields_for :line_items do |items| %>
        <%= render "line_item_fields", :f => items %>
      <% end %>
      <tr style="background:#ffffff;"><td align="left" colspan="8" style="border:#ffffff"><%= link_to_add_fields "Add Items", f, :line_items %></td></tr>
    </table>
    <br/>
    <div id ="totalinvoice" ><b style="padding-left: 5px;">Total: &nbsp;&nbsp;&nbsp;&nbsp;$&nbsp;</b><%= f.text_field :total ,:id => "invoicetotal",:size => 15, :readonly => "readonly"%></div>
    <%= f.submit "Update" %><span id="vmessage" style= "color: red;"></span>
  <% end %>
</div>
<div style="height: 40px;"><br></br></div>

